<resources>

    <style name="AppTheme" parent="BaseAppThemeOverride.Light">
        <item name="android:windowBackground">@color/gallery</item>
        <item name="colorAccent">@color/silabs_blue</item>
        <item name="colorControlHighlight">@color/silabs_click_grey</item>
        <item name="bottomNavigationStyle">@style/BottomNavigationView</item>
    </style>

    <style name="HeadLine" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Subhead" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">@dimen/text_size_subhead</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">none</item>
    </style>

    <style name="ThermoLabelText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/thermo_label_text_size</item>
        <item name="android:color">@color/boulder</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SwitchText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/empty_thermo_subheader_text_size</item>
        <item name="android:textColor">@color/silabs_red</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ThermoValueText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/thermo_value_text_size</item>
        <item name="android:color">@color/masala</item>
    </style>

    <style name="ThermoGraphTimeText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/thermo_graph_time_text_size</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingBottom">@dimen/bottom_navigation_bottom_padding</item>
        <item name="itemBackground">@drawable/bottom_item_selector</item>
        <item name="itemIconTint">@drawable/nav_bar_selector</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.BottomNavigationViewActive
        </item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.BottomNavigationViewInactive
        </item>
    </style>

    <style name="TextAppearance.BottomNavigationViewInactive" parent="">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/silabs_subtle_text</item>
        <item name="android:textSize">@dimen/bottom_navigation_text_size</item>
    </style>

    <style name="TextAppearance.BottomNavigationViewActive" parent="">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/silabs_blue</item>
        <item name="android:textSize">@dimen/bottom_navigation_text_size</item>
    </style>

    <style name="TextAppearance.ToolbarTitle" parent="">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/toolbar_title_size</item>
        <item name="android:textColor">@color/silabs_white</item>
    </style>

    <style name="ButtonBlue" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/silabs_white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:background">@drawable/btn_rounded_blue</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ButtonRed" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/silabs_white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:background">@drawable/btn_rounded_red</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ButtonBlueWithBorders">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/silabs_blue</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:background">@drawable/btn_blue_with_borders</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ButtonBorderlessBlue" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/silabs_blue</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:background">@drawable/btn_blue_ripple_effect</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TitleSmall" parent="android:Widget.TextView">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/silabs_primary_text</item>
    </style>

    <style name="TitleMedium" parent="android:Widget.TextView">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/silabs_primary_text</item>
    </style>

    <style name="TitleBig" parent="android:Widget.TextView">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/silabs_primary_text</item>
    </style>

    <style name="TitleLarge" parent="android:Widget.TextView">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/silabs_primary_text</item>
    </style>

    <style name="TextSmall" parent="android:Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/silabs_primary_text</item>
    </style>

    <style name="TextMedium" parent="android:Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/silabs_primary_text</item>
    </style>

    <style name="TextBig" parent="android:Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/silabs_primary_text</item>
    </style>

    <style name="TextViewNoteWarning" parent="android:Widget.TextView">
        <item name="android:textColor">@color/silabs_red</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextViewNoteInfo" parent="android:Widget.TextView">
        <item name="android:textColor">@color/silabs_inactive_light</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="EditTextNormal" parent="android:Widget.EditText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/text_state_color</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:background">@drawable/et_background</item>
    </style>

    <style name="EditTextSmall" parent="android:Widget.EditText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/text_state_color</item>
        <item name="android:padding">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:background">@drawable/et_background</item>
    </style>

    <style name="DialogHeaderText" parent="Widget.AppCompat.TextView">
        <item name="android:background">@color/silabs_dialog_title_background</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/silabs_primary_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CustomSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:layout_height">36dp</item>
    </style>

    <!-- Thunderboard general -->
    <style name="wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="block">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Demo Environment -->

    <style name="EnvironmentControlLabel_HallStateTampered" parent="tb_robo_medium_18dp">
        <item name="android:textColor">@color/tb_red</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="seekbar" parent="block">
        <item name="android:paddingTop">@dimen/space_S</item>
        <item name="android:paddingBottom">@dimen/space_S</item>
    </style>

    <!--RESKINNING-->

    <style name="tb_text_color_black" parent="wrap">
        <item name="android:textColor">@color/silabs_black</item>
    </style>

    <style name="tb_text_color_grey" parent="wrap">
        <item name="android:textColor">@color/tb_font_grey</item>
    </style>

    <style name="tb_text_color_blue" parent="wrap">
        <item name="android:textColor">@color/tb_blue</item>
    </style>

    <style name="tb_text_color_white" parent="wrap">
        <item name="android:textColor">@color/silabs_white</item>
    </style>

    <style name="tb_robo_medium_18dp" parent="tb_text_color_black">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_size_ML</item>
    </style>

    <style name="tb_robo_medium_18dp_white" parent="tb_text_color_white">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_size_ML</item>
    </style>

    <style name="tb_robo_regular_18dp_grey" parent="tb_text_color_grey">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_size_ML</item>
    </style>

    <style name="tb_robo_regular_14dp_grey" parent="tb_text_color_grey">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_size_SM</item>
    </style>

    <style name="tb_robo_regular_12dp_grey" parent="tb_text_color_grey">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_size_S</item>
    </style>

    <style name="tb_robo_regular_12dp" parent="tb_text_color_black">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_size_S</item>
    </style>

    <style name="tb_robo_medium_14dp" parent="tb_text_color_black">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_size_SM</item>
    </style>

    <style name="tb_robo_medium_14dp_blue" parent="tb_text_color_blue">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_size_SM</item>
    </style>

</resources>
