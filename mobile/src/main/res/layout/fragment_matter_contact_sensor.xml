<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/matter_5dp"
                android:gravity="center"
                android:text="@string/matter_contact_sensor_cluster"
                android:textSize="@dimen/text_size_XL"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="@dimen/matter_15dp"
                android:layout_margin="@dimen/matter_25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageContactSensorOpen"
                    android:text="@string/matter_init_value"
                    android:textSize="@dimen/text_size_XXL"
                    android:gravity="center"
                    android:background="@drawable/matter_contact_sensor_open"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/matter_200dp"
                    android:layout_height="@dimen/matter_200dp"
                    android:layout_margin="@dimen/matter_10dp"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/imageContactSensorClose"
                    android:text="@string/matter_init_value"
                    android:textSize="@dimen/text_size_XXL"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/matter_contact_sensor_close"
                    android:layout_width="@dimen/matter_200dp"
                    android:layout_height="@dimen/matter_200dp"
                    android:layout_margin="@dimen/matter_10dp"
                    android:visibility="gone"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal">

               <TextView
                   android:textSize="@dimen/text_size_ML"
                   android:text="@string/matter_contact_sensor_action"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
