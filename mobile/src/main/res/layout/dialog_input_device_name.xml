<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/silabs_white"
    android:orientation="vertical"
    android:padding="@dimen/item_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Device Name"
        android:textColor="@color/dark_gray_id_text"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edtDeviceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:maxLines="1"
        android:padding="5dp"
        android:hint="Enter Device Name"
        android:singleLine="true"
        android:textColor="@color/silabs_black"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_margin">

        <TextView
            android:id="@+id/btnOk"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/btn_blue_selector"
            android:gravity="center"
            android:padding="5dp"
            android:text="Ok"
            android:textColor="@color/silabs_white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/item_margin"
            android:layout_toStartOf="@+id/btnOk"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="@color/dark_gray_id_text"
            android:textSize="20sp" />

    </RelativeLayout>
</LinearLayout>