<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/location_disabled"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue_primary">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="sans-serif-medium"
        android:layout_marginHorizontal="12dp"
        android:text="@string/Location_disabled"
        android:textColor="@color/silabs_white"
        android:textSize="14sp" />

    <TextView android:id="@+id/enable_location"
        style="@style/info_bar_text_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="@string/location_enable" />

    <TextView android:id="@+id/location_info"
        style="@style/info_bar_text_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/location_info" />
</LinearLayout>