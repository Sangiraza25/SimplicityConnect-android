<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/matter_5dp"
                android:gravity="center"
                android:text="@string/matter_window_open_close_cluster"
                android:textSize="@dimen/text_size_XL"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btn_matter_window_state"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/matter_18dp"
                android:background="@color/silabs_transparent"
                android:scaleType="centerInside" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_window_open"
                    style="@style/MatterButtonBlue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/matter_20dp"
                    android:layout_weight="1"
                    android:text="@string/matter_window_open" />

                <Button
                    android:id="@+id/btn_window_close"
                    style="@style/MatterButtonBlue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/matter_20dp"
                    android:layout_weight="1"
                    android:text="@string/matter_window_close" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

