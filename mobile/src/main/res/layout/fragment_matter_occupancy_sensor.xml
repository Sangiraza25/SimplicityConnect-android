<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/matter_5dp"
                android:gravity="center"
                android:text="@string/matter_occupancy_cluster"
                android:textSize="@dimen/text_size_XL"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:background="@color/silabs_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/matter_25dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:cardCornerRadius="@dimen/matter_15dp">

                <ImageView
                    android:id="@+id/imageOccupancyNo"
                    android:layout_width="@dimen/matter_90dp"
                    android:layout_height="@dimen/matter_200dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/matter_10dp"
                    android:background="@drawable/matter_occupancy_no"
                    android:gravity="center"
                    android:scaleType="center"
                    android:text="@string/matter_init_value"
                    android:textSize="@dimen/text_size_XXL" />

                <ImageView
                    android:id="@+id/imageOccupancyDetected"
                    android:layout_width="@dimen/matter_90dp"
                    android:layout_height="@dimen/matter_200dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/matter_10dp"
                    android:background="@drawable/matter_occupancy_detected"
                    android:gravity="center"
                    android:scaleType="center"
                    android:text="@string/matter_init_value"
                    android:textSize="@dimen/text_size_XXL" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:textSize="@dimen/text_size_ML"
                    android:text="@string/matter_occupancy_sensor_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/matter_10dp" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
